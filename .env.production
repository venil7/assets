# Production environment configuration
# IMPORTANT: Update these values before deploying to production

NODE_ENV=production

# Database
ASSETS_DB=./data/assets.db

# Application
ASSETS_APP=./public
ASSETS_PORT=4020

# Caching
ASSETS_CACHE_SIZE=1000
ASSETS_CACHE_TTL=5m

# Authentication (JWT)
# REQUIRED: Generate a strong random secret
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ASSETS_JWT_SECRET=CHANGE_ME_TO_STRONG_RANDOM_SECRET_IN_PRODUCTION

ASSETS_JWT_EXPIRES_IN=24h
ASSETS_JWT_REFRESH_BEFORE=12h

# CORS - REQUIRED: Set to your frontend domain
# Example: CORS_ORIGIN=https://assets.yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info
