# Development environment configuration

NODE_ENV=development

# Database
ASSETS_DB=./data/assets.db

# Application
ASSETS_APP=./public
ASSETS_PORT=4020

# Caching
ASSETS_CACHE_SIZE=1000
ASSETS_CACHE_TTL=5m

# Authentication (JWT)
ASSETS_JWT_SECRET=dev-secret-change-in-production-immediately
ASSETS_JWT_EXPIRES_IN=24h
ASSETS_JWT_REFRESH_BEFORE=12h

# CORS - Allow Vite dev server on localhost:5173
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
